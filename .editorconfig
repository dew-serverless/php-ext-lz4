# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{*.c,Makefile*}]
indent_style = tab
indent_size = 4

[*.{php,phpt}]
indent_stype = space
indent_size = 4

[*.m4]
indent_stype = space
indent_size = 2

[*.md]
indent_style = space
max_line_length = 80
